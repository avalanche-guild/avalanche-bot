{
  "name": "avalanche-bot",
  "version": "1.0.0",
  "description": "A bot for the AVALANCHE Discord server.",
  "main": "index.js",
  "repository": "https://github.com/avalanche-guild/avalanche-bot",
  "author": "Cameron Spear <cameronspear@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node ./dist/",
    "clean": "rm -Rf ./dist/ ./coverage/ ./nyc_output/",
    "build": "npm run clean && tsc",
    "dev": "node-dev --require ts-node/register ./index.ts",
    "test": "npm run build && nyc ava --serial"
  },
  "dependencies": {
    "app-root-path": "2.0.1",
    "bluebird": "3.5.0",
    "chalk": "2.1.0",
    "discord.js": "11.2.1",
    "lodash": "4.17.4",
    "mockery": "2.1.0"
  },
  "devDependencies": {
    "@types/app-root-path": "1.2.4",
    "@types/chalk": "0.4.31",
    "@types/lodash": "4.14.74",
    "@types/mockery": "1.4.29",
    "@types/node": "8.0.28",
    "@types/sinon": "2.3.5",
    "ava": "0.22.0",
    "node-dev": "3.1.3",
    "nyc": "11.2.1",
    "sinon": "3.3.0",
    "ts-node": "3.3.0",
    "typescript": "2.5.2"
  },
  "nyc": {
    "all": false,
    "checkCoverage": true,
    "perFile": true,
    "lines": 90,
    "branches": 90,
    "functions": 90,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "**/*.test.js",
      "dist/index.js"
    ],
    "include": [
      "dist"
    ]
  }
}
